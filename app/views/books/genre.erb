<div class="genre">
    <div class="error">
        <p><%= flash[:message] %></p>
    <div>
    <h2 class="display-4">Which genre would you like to explore?</h2> 
    <div class="text-center">
        <form action="/books-by-genre" method="POST">
            <div class="col-5 mx-auto">
            <select class="form-select" name="genre_id" aria-label="Default select example">
                <option selected>Select a Genre to view Books</option>
                <% @genres.each do |genre| %>
                    <option id="genre_<%=genre.id%>" name="genre_id" value="<%= genre.id %>"><%= genre.name %></option>
                <%end%>
            </select>
            </div>
            <br><br>
            <input class="btn btn-success" type="submit" value="View Books">
        </form> 
    </div>
    <br><br>
    <div class="text-center">
        <a class="btn btn-outline-dark" href="/books" role="button">Return to the Library</a>
    </div><br><br>
</div>

