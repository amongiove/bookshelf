<h3><%= flash[:message] %></h3>

<h1>Welcome to your BookShelf</h1>

<h3>Books <%=@user.username.capitalize%> wants to read.</h3>
<%@books.each do |book|%>
    <%if @user_books.find_by(:user_id => current_user.id, :book_id => book.id) != nil
        if @user_books.find_by(:user_id => current_user.id, :book_id => book.id).read == false %>
            <li><a href="/books/<%=book.slug%>"><%=book.title%></a></li>
        <%end%>
    <%end%>
<%end%>


<h3>Books <%=@user.username.capitalize%> has read</h3>
<%@books.each do |book|%>
    <%if @user_books.find_by(:user_id => current_user.id, :book_id => book.id) != nil
        if @user_books.find_by(:user_id => current_user.id, :book_id => book.id).read == true %>
            <li><a href="/books/<%=book.slug%>"><%=book.title%></a></li>
        <%end%>
    <%end%>
<%end%>

<h3><a class="button" href="/books/new"> Add a new Book </a></h3>
      
<h3><a class="button" href="/books"> See all Books </a></h3>

<h3><a class="button" href="/logout"> Logout </a></h3>